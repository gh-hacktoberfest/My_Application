<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module2.caudo"
    android:background="@color/bg_fragment"
    tools:ignore="MissingDefaultResource">

    <LinearLayout

        android:id="@+id/wrapCauDo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_radius_blue_bottom"
            android:paddingTop="24dp"
            android:paddingBottom="12dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/cauDoBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="?attr/actionBarTheme"
                    app:navigationIcon="@drawable/ic_back_arrow_white" />

                <TextView
                    android:id="@+id/textViewTitleCaudo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/almarai_bold"
                    android:paddingLeft="2dp"
                    android:paddingTop="10dp"
                    android:shadowColor="#000000"
                    android:text="Câu đố dân gian"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|end"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_button"
                        android:padding="2dp"
                        android:src="@drawable/avata1" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/questionNumber"
                android:layout_width="196dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:fontFamily="@font/almarai_bold"
                android:gravity="left"
                android:text="Câu 1"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/quizQuestionsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="96dp"
                android:layout_marginBottom="24dp"
                android:text="10"
                android:textColor="@color/red"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

        </LinearLayout>

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/almarai_bold"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Con gì có 4 chân vào buổi sáng, 2 chân vào buổi trưa, và3 chân vào buổi tối?"
            android:textSize="22dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/border"/>

        <TextView
            android:id="@+id/dapan1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/almarai_bold"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:text="\nCon người\n"
            android:textSize="22dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/border1"/>
        <TextView
            android:id="@+id/dapan2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/almarai_bold"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:text="\nCon chim\n"
            android:textSize="22dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/border1"/>
        <TextView
            android:id="@+id/dapan3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/almarai_bold"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:text="\nCon chồn\n"
            android:textSize="22dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/border1"/>

        <Button
            android:id="@+id/nextBtn"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:backgroundTint="@color/line_default"
            android:text="Next"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/resultBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="40dp"
            android:backgroundTint="@color/line_default"
            android:text="Result"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/ansFeedbackTv"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="verify answer"
            android:textColor="@color/black"
            app:layout_constraintHorizontal_bias="0.5" />

    </LinearLayout>

</FrameLayout>